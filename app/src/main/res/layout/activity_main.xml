<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/layout">
    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:text="汽车保养助手"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_car_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="选择车型"
        android:textSize="20dp"
        android:layout_below="@+id/textView"/>

    <Button
        android:id="@+id/button_item_set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="设置车辆保养项目"
        android:textSize="20dp"
        android:layout_below="@+id/button_car_select"/>

    <Button
        android:id="@+id/button_last_set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="设置最后一次保养项目"
        android:textSize="20dp"
        android:layout_below="@+id/button_item_set"/>

        <Button
            android:id="@+id/button_my"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>