<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ed88ed"
    tools:context="com.exanmple.carmaintain.MainActivity">

    <TextView
        android:id="@+id/group_textview"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/group_number"
        android:textSize="20sp"
        android:text=""/>
    <TextView
        android:id="@+id/group_number"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/add_text"
        android:text="20"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:text="长按\n添加"/>
</RelativeLayout>