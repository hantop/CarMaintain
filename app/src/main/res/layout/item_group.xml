<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ed88ed"
    tools:context="com.exanmple.carmaintain.MainActivity">

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/baojun"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/group_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/group_image"
        android:layout_toLeftOf="@+id/group_number"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:text=""/>
    <TextView
        android:id="@+id/group_number"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/add_text"
        android:text="20"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:text="长按\n添加"
        android:paddingRight="5dp"/>
</RelativeLayout>